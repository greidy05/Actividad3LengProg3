@model Actividad4LengProg3.Models.EstudianteViewModel

@{
    ViewBag.Title = "Registro de Estudiantes";
}

<h2>Registro de Estudiantes</h2>

@using (Html.BeginForm("Registrar", "Estudiantes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.NombreCompleto)
        @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NombreCompleto, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Matricula)
        @Html.TextBoxFor(m => m.Matricula, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Matricula, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Carrera)
        @Html.DropDownListFor(m => m.Carrera, new SelectList(new[] { "Ingeniería", "Medicina", "Contabilidad", "Derecho" }), "Seleccione una carrera", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Carrera, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CorreoInstitucional)
        @Html.TextBoxFor(m => m.CorreoInstitucional, new { @class = "form-control", type = "email" })
        @Html.ValidationMessageFor(m => m.CorreoInstitucional, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Telefono)
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaNacimiento)
        @Html.TextBoxFor(m => m.FechaNacimiento, new { @type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FechaNacimiento, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Género</label><br />
        @Html.RadioButtonFor(m => m.Genero, "Masculino") Masculino
        @Html.RadioButtonFor(m => m.Genero, "Femenino") Femenino
        <br />
        @Html.ValidationMessageFor(m => m.Genero, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Turno)
        @Html.DropDownListFor(m => m.Turno, new SelectList(new[] { "Mañana", "Tarde", "Noche" }), "Seleccione un turno", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Turno, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TipoIngreso)
        @Html.DropDownListFor(m => m.TipoIngreso, new SelectList(new[] { "Nuevo Ingreso", "Reingreso", "Transferencia" }), "Seleccione un tipo", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TipoIngreso, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("¿Está becado?")
        @Html.CheckBoxFor(m => m.EstaBecado)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PorcentajeBeca)
        @Html.TextBoxFor(m => m.PorcentajeBeca, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PorcentajeBeca, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(m => m.TerminosYCondiciones)
        Acepto los términos y condiciones
        @Html.ValidationMessageFor(m => m.TerminosYCondiciones, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Registrar estudiante</button>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
