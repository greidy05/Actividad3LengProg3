@model Actividad4LengProg3.Models.EstudianteViewModel

@{
    ViewBag.Title = "Editar Estudiante";
}

<h2>Editar Estudiante</h2>

@using (Html.BeginForm("Editar", "Estudiantes", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.Matricula)

    <div>
        @Html.LabelFor(m => m.NombreCompleto, "Nombre completo")
        @Html.TextBoxFor(m => m.NombreCompleto, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NombreCompleto)
    </div>

    <div>
        @Html.LabelFor(m => m.Carrera, "Carrera")
        @Html.DropDownListFor(m => m.Carrera, new SelectList(new[] { "Ingeniería", "Medicina", "Contabilidad", "Derecho" }, Model.Carrera), "Seleccione una carrera", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Carrera)
    </div>

    <div>
        @Html.LabelFor(m => m.CorreoInstitucional, "Correo institucional")
        @Html.TextBoxFor(m => m.CorreoInstitucional, new { @class = "form-control", type = "email" })
        @Html.ValidationMessageFor(m => m.CorreoInstitucional)
    </div>

    <div>
        @Html.LabelFor(m => m.Telefono, "Teléfono")
        @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Telefono)
    </div>

    <div>
        @Html.LabelFor(m => m.FechaNacimiento, "Fecha de nacimiento")
        @Html.TextBoxFor(m => m.FechaNacimiento, "{0:yyyy-MM-dd}", new { @type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FechaNacimiento)
    </div>

    <div>
        <label>Género:</label><br />
        @Html.RadioButtonFor(m => m.Genero, "Masculino") Masculino
        @Html.RadioButtonFor(m => m.Genero, "Femenino") Femenino
        @Html.ValidationMessageFor(m => m.Genero)
    </div>

    <div>
        @Html.LabelFor(m => m.Turno, "Turno")
        @Html.DropDownListFor(m => m.Turno, new SelectList(new[] { "Mañana", "Tarde", "Noche" }, Model.Turno), "Seleccione un turno", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Turno)
    </div>

    <div>
        @Html.LabelFor(m => m.TipoIngreso, "Tipo de ingreso")
        @Html.DropDownListFor(m => m.TipoIngreso, new SelectList(new[] { "Nuevo Ingreso", "Reingreso", "Transferencia" }, Model.TipoIngreso), "Seleccione un tipo", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TipoIngreso)
    </div>

    <div>
        @Html.Label("¿Está becado?")
        @Html.CheckBoxFor(m => m.EstaBecado)
    </div>

    <div>
        @Html.LabelFor(m => m.PorcentajeBeca, "Porcentaje de beca (%)")
        @Html.TextBoxFor(m => m.PorcentajeBeca, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PorcentajeBeca)
    </div>

    <div>
        <label>Términos y condiciones</label><br />
        @Html.CheckBoxFor(m => m.TerminosYCondiciones) Acepto los términos y condiciones
        @Html.ValidationMessageFor(m => m.TerminosYCondiciones)
    </div>

    <br />
    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a href="@Url.Action("Lista", "Estudiantes")" class="btn btn-secondary">Cancelar</a>
}
